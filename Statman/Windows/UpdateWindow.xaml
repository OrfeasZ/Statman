<Window x:Class="Statman.Windows.UpdateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Update Available" Height="193" Width="374" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded" Icon="/Statman;component/Icon-256px.ico">
    <Grid>
        <TextBlock x:Name="UpdateText" Margin="10,10,10,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="112">
            A new update for Statman is available!<LineBreak/>
            <LineBreak/>
            Your Version: v1.0.0.0<LineBreak/>
            Latest Version: v1.2.0.0 [Pre-Release]<LineBreak/>
            <LineBreak/>
            Click OK to be redirected to the download page.
        </TextBlock>
        <Button x:Name="OKButton" Content="OK" HorizontalAlignment="Right" Margin="0,0,90,10" VerticalAlignment="Bottom" Width="75" Click="OKButton_Click"/>
        <Button x:Name="CancelButton" Content="Cancel" Margin="0,0,10,10" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75" Click="CancelButton_Click"/>
    </Grid>
</Window>
