<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:windows="clr-namespace:Statman.Windows">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="GlassWindow.generic.xaml" />
    </ResourceDictionary.MergedDictionaries>
    
    <Style TargetType="{x:Type windows:AnimatedWindow}">
        <Setter Property="AllowsTransparency" Value="True"/>
        <Setter Property="WindowStyle" Value="None"/>
        <Setter Property="ResizeMode" Value="NoResize"/>
        <Setter Property="Template" Value="{StaticResource GlassWindowTemplate}"/>
    </Style>
</ResourceDictionary>